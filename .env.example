# KAPCI WhatsApp AI Agent - Environment Configuration
# ===================================================
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
# For SQLite (development):
DATABASE_URL=sqlite:///kapci.db

# For MySQL (production):
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/kapci

# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/kapci

# WhatsApp Business API Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=kapci_verify_token

# External APIs
CRM_API_URL=http://localhost:8001/api
CRM_API_KEY=your-crm-api-key

ERP_API_URL=http://localhost:8002/api
ERP_API_KEY=your-erp-api-key

INVENTORY_API_URL=http://localhost:8003/api
INVENTORY_API_KEY=your-inventory-api-key

# LLM Configuration (optional)
LLM_PROVIDER=local
# Options: local, openai, ollama

# For OpenAI:
OPENAI_API_KEY=your-openai-api-key
LLM_MODEL=gpt-3.5-turbo

# For Ollama:
# LLM_API_URL=http://localhost:11434/api
# LLM_MODEL=llama2

# File Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Admin Notifications
ADMIN_EMAILS=admin@kapci.com,support@kapci.com

# Server Configuration
HOST=0.0.0.0
PORT=5000
